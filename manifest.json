{
    "manifest_version": 2,
    "name": "FarmRPG-Extensions",
    "version": "1.0",
    "description": "Coderanger's personal FarmRPG extensions.",
    "icons": {
        "48": "icons/farmrpg-48.png",
        "96": "icons/farmrpg-96.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.farmrpg.com/*"
            ],
            "js": [
                "farmrpg-ext.js"
            ],
            "css": [
                "farmrpg-ext.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "farmrpg-ext-bg.js"
        ]
    },
    "web_accessible_resources": ["images/*"],
    "permissions": [
        "*://*.farmrpg.com/*",
        "webRequest",
        "webRequestBlocking",
        "unlimitedStorage",
        "alarms"
    ]
}
